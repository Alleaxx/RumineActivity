    <h2>Версии приложения</h2>
    <div>
        <section class="update-item">
            <h3 class="update-version-header">v1.00</h3>
            <section class="update-info">
                <div class="update-info-row">
                    <p>
                        <span class="update-date">20 мая 2025</span>

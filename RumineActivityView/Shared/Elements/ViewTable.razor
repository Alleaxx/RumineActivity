@typeparam T

<p class="count">Всего @Items.Count()</p>
<table class="view-table">
    <thead>
        <tr>
            @TableHeader
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Items)
        {
            <tr>
                @RowTemplate(item)
            </tr>
        }
    </tbody>
</table>


@code {
    [Parameter]
    public RenderFragment TableHeader { get; set; }
    [Parameter]
    public RenderFragment<T> RowTemplate { get; set; }
    [Parameter]
    public IEnumerable<T> Items { get; set; }
}

@inherits ReportComponent

<table class="table-activity">
    <caption>Классическая таблица 2.0, сообщения</caption>
    <thead>
        <tr>
            <th class="title">@Report.Period.Name</th>
            <th class="year-sum-title">всего</th>
            @foreach (var key in Table.ColGroups)
            {
                <th class="month">@key</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Table.Table)
        {
            <tr>
                <th class="year">@group.Key</th>
                <td class="year-sum">@Table.TableSum[group.Key].ToString("#,0")</td>

                @foreach (var col in group.Value)
                {
                    if (col.Value == null)
                    {
                        <td class="month-unknown">?</td>
                    }
                    else
                    {
                        <td class="month-posts" title="@($"{col.Value.Range.From.ToString(col.Value.DateFormat)}")" style="@($"background-color: {View.CheckEntry(col.Value).Color}")">
                            @col.Value.PostsDefault.ToString("#,0")
                        </td>
                    }
                }
            </tr>
        }

    </tbody>
</table>
@code {
    public TableGrouping Table => new TableGrouping(Report.Period.Type, Report.Entries);
}
